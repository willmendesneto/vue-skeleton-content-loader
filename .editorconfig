# See https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
indent_style = space

[*.sh]
indent_size = 2
indent_style = space

[*.{json,yml,ts,js}]
indent_size = 2
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab

[*.md]
indent_size = 2
indent_style = space
